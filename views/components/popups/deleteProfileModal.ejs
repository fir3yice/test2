<div class="modal fade" id="deleteProfileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="d-flex justify-content-end">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class='bx bx-x-circle' id="delete-i"></i>
                <div>
                    <h4 class="text-center p-2">Delete Confirmation</h4>
                    <h6 class="text-center pt-2">
                        Are you sure you want to delete this 
                        <% if (pageName == "Member's Profile") { %>
                            member?
                        <% } else { %>
                            account?
                        <% } %>
                    </h6>
                    <h6 class="text-center text-danger">Warning: This action cannot be undone.</h6>
                </div>
                <div class="p-4">
                    <h6 class="text-center p-2">Type DELETE to confirm.</h6>
                    <input type="text" class="form-control text-center" id="deleteConfirm">
                </div>
                <div class="modal-buttons p-3">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id= "deleteButton">Delete</button>             
                    
                    <% if (pageName == "Member's Profile") { %>
                        <script>
                            cardDelete("member", "<%=member?._id%>");
                        </script>
                    <% } %>                    
                </div>
            </div>
        </div>
    </div>
</div>
